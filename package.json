{
	"name": "ecommerce-frontend",
	"version": "0.0.1",
	"scripts": {
		"pre-deploy": "pnpm build && sleep 1 && pnpm preview",
		"db:push": "pnpm tsx ./src/lib/server/db.migrate.ts",
		"db:generate": "drizzle-kit generate:pg",
		"db:update": "pnpm db:generate && sleep 1 && pnpm db:push",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "pnpm dlx @biomejs/biome format ./src --write",
		"lint": "pnpm dlx @biomejs/biome lint ./src",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
